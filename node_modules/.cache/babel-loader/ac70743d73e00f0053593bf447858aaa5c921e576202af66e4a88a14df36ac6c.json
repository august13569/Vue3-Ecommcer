{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport Navbar from '@/components/Navbar.vue';\nimport Footer from '@/components/Footer.vue';\nexport default {\n  components: {\n    Navbar,\n    Footer\n  },\n  data() {\n    return {\n      isLoading: false,\n      products: [],\n      productsIndex: {}\n    };\n  },\n  methods: {\n    getProducts() {\n      const url = `${process.env.VUE_APP_API}api/${process.env.VUE_APP_PATH}/products/all`;\n      this.isLoading = true;\n      this.$http.get(url).then(res => {\n        this.products = res.data.products;\n        this.isLoading = false;\n        this.sumProductsCategory();\n      });\n    },\n    intoProduct(id) {\n      this.$router.push(`/products/${id}`);\n    },\n    sumProductsCategory() {\n      this.productsIndex = this.products.reduce((acc, product) => {\n        // 利用三元運算子判斷 category 是否已存在於 acc\n        acc[product.category] = (acc[product.category] || 0) + 1;\n        return acc;\n      }, {});\n      const total = Object.values(this.productsIndex).filter(category => category !== 'All').reduce((sum, count) => sum + count, 0);\n      // 將 All 屬性刪除\n      delete this.productsIndex.All;\n      // 新增 All 的屬性並設置總和到物件的第一個位置\n      this.productsIndex = {\n        All: total,\n        ...this.productsIndex\n      };\n      // 印出結果檢查\n      console.log(this.productsIndex);\n    }\n  },\n  created() {\n    this.getProducts();\n  }\n};","map":{"version":3,"names":["Navbar","Footer","components","data","isLoading","products","productsIndex","methods","getProducts","url","process","env","VUE_APP_API","VUE_APP_PATH","$http","get","then","res","sumProductsCategory","intoProduct","id","$router","push","reduce","acc","product","category","total","Object","values","filter","sum","count","All","console","log","created"],"sources":["C:\\Users\\augus\\OneDrive\\桌面\\暫存區\\vue-practice\\brite\\src\\views\\front\\Products.vue"],"sourcesContent":["<!-- 文字內容尚未修改、圖片之後再選適合的、未來要加動畫效果 -->\n<template>\n  <Loading :active=\"isLoading\"></Loading>\n  <Navbar></Navbar>\n  <!-- Banner -->\n  <header class=\"header-2 d-flex align-items-center justify-content-center mb-5\">\n    <div class=\"text-white text-center\">\n      <h1 class=\"display-1\">Products</h1>\n    </div>\n  </header>\n  <!-- Product -->\n  <div class=\"container\">\n    <h2 class=\"display-3\">All Products</h2>\n    <div class=\"row\">\n      <div class=\"col-md-3\">\n        <!-- Show on tab and above -->\n        <div class=\"list-group d-none d-md-block\">\n          <a href=\"#\" class=\"list-group-item list-group-item-action\"\n             v-for=\"(value, key) in productsIndex\" :key=\"key\"\n             >\n             {{ key === 'All' ? 'Products' : key + 'Lamps'}} ({{ value }})\n          </a>\n        </div>\n        <!-- Show on phone -->\n        <div class=\"position-relative d-md-none\">\n          <div class=\"d-flex overflow-auto\">\n            <span class=\"badge rounded-pill bg-secondary\">\n              <a class=\"link-light n-line\" href=\"#\">All Products (38)</a>\n            </span>\n            <span class=\"badge rounded-pill bg-secondary\">\n              <a class=\"link-light n-line\" href=\"#\">Ceiling Lamp (9)</a>\n            </span>\n            <span class=\"badge rounded-pill bg-secondary\">\n              <a class=\"link-light n-line\" href=\"#\">Clip Lamp (7)</a>\n            </span>\n            <span class=\"badge rounded-pill bg-secondary\">\n              <a class=\"link-light n-line\" href=\"#\">Floor Lamp (8)</a>\n            </span>\n            <span class=\"badge rounded-pill bg-secondary\">\n              <a class=\"link-light n-line\" href=\"#\">Pendant Lamp (10)</a>\n            </span>\n            <span class=\"badge rounded-pill bg-secondary\">\n              <a class=\"link-light n-line\" href=\"#\">Table Lamp (4)</a>\n            </span>\n          </div>\n          <!-- 在瀏覽器的手機板中，畫面會出現橫軸。由於按鈕的突出而造成的 -->\n          <!-- IKEA的橫向產品列表是縮小到一個程度後讓按鈕消失 -->\n          <!-- 最好的方法應該是用hovor的方式，因為手機上沒有滑鼠，而小螢幕時又可以顯示 -->\n          <div class=\"d-md-none position-absolute top-50 start-0 translate-middle\"\n               style=\"z-index: 1;\"\n               >\n            <button class=\"btn\" type=\"button\">\n              <span class=\"bi bi-arrow-left-circle-fill display-5\"></span>\n              <span class=\"visually-hidden\">Previous</span>\n            </button>\n          </div>\n          <div class=\"d-md-none position-absolute top-50 start-100 translate-middle\"\n               style=\"z-index: 1;\"\n               >\n            <button class=\"btn\" type=\"button\">\n              <span class=\"bi bi-arrow-right-circle-fill display-5\"></span>\n              <span class=\"visually-hidden\">Next</span>\n            </button>\n          </div>\n        </div>\n      </div>\n      <div class=\"col-md-9\">\n        <div class=\"d-flex flex-wrap\">\n          <div class=\"card border border-white h-border mx-auto m-ss-1\" style=\"width: 14rem;\"\n               v-for=\"item in products\" :key=\"item.id\"\n               >\n            <a class=\"n-line\" href=\"#\" @click.prevent=\"intoProduct(item.id)\">\n              <img :src=\"`${item.imageUrl}`\" class=\"card-img-top\" alt=\"...\">\n              <div class=\"card-body\">\n                <h5 class=\"card-title text-dark\">{{ item.title }}</h5>\n                <p class=\"card-text text-secondary\">{{ item.category }}</p>\n                <div class=\"d-flex justify-content-between\">\n                  <p class=\"card-text text-primary fs-4\">${{ item.price }}</p>\n                  <p class=\"card-text text-secondary text-decoration-line-through pt-1\">\n                    ${{ item.origin_price }}\n                  </p>\n                </div>\n              </div>\n            </a>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n  <Footer></Footer>\n</template>\n\n<script>\nimport Navbar from '@/components/Navbar.vue';\nimport Footer from '@/components/Footer.vue';\n\nexport default {\n  components: {\n    Navbar,\n    Footer,\n  },\n  data() {\n    return {\n      isLoading: false,\n      products: [],\n      productsIndex: {},\n    };\n  },\n  methods: {\n    getProducts() {\n      const url = `${process.env.VUE_APP_API}api/${process.env.VUE_APP_PATH}/products/all`;\n      this.isLoading = true;\n      this.$http.get(url)\n        .then((res) => {\n          this.products = res.data.products;\n          this.isLoading = false;\n          this.sumProductsCategory();\n        });\n    },\n    intoProduct(id) {\n      this.$router.push(`/products/${id}`);\n    },\n    sumProductsCategory() {\n      this.productsIndex = this.products.reduce((acc, product) => {\n        // 利用三元運算子判斷 category 是否已存在於 acc\n        acc[product.category] = (acc[product.category] || 0) + 1;\n        return acc;\n      }, {});\n      const total = Object.values(this.productsIndex)\n        .filter((category) => category !== 'All')\n        .reduce((sum, count) => sum + count, 0);\n      // 將 All 屬性刪除\n      delete this.productsIndex.All;\n      // 新增 All 的屬性並設置總和到物件的第一個位置\n      this.productsIndex = { All: total, ...this.productsIndex };\n      // 印出結果檢查\n      console.log(this.productsIndex);\n    },\n  },\n  created() {\n    this.getProducts();\n  },\n};\n</script>\n"],"mappings":";AA6FA,OAAOA,MAAK,MAAO,yBAAyB;AAC5C,OAAOC,MAAK,MAAO,yBAAyB;AAE5C,eAAe;EACbC,UAAU,EAAE;IACVF,MAAM;IACNC;EACF,CAAC;EACDE,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,KAAK;MAChBC,QAAQ,EAAE,EAAE;MACZC,aAAa,EAAE,CAAC;IAClB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,WAAWA,CAAA,EAAG;MACZ,MAAMC,GAAE,GAAK,GAAEC,OAAO,CAACC,GAAG,CAACC,WAAY,OAAMF,OAAO,CAACC,GAAG,CAACE,YAAa,eAAc;MACpF,IAAI,CAACT,SAAQ,GAAI,IAAI;MACrB,IAAI,CAACU,KAAK,CAACC,GAAG,CAACN,GAAG,EACfO,IAAI,CAAEC,GAAG,IAAK;QACb,IAAI,CAACZ,QAAO,GAAIY,GAAG,CAACd,IAAI,CAACE,QAAQ;QACjC,IAAI,CAACD,SAAQ,GAAI,KAAK;QACtB,IAAI,CAACc,mBAAmB,CAAC,CAAC;MAC5B,CAAC,CAAC;IACN,CAAC;IACDC,WAAWA,CAACC,EAAE,EAAE;MACd,IAAI,CAACC,OAAO,CAA